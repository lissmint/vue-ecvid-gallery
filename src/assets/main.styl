@import url('https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap')
@import 'variables.styl'
html
  font-family 'Exo 2', sans-serif
  color #fff
  background-color #1e272e
body
 margin 0
a
  text-decoration none
  color #ffffff
  margin 0 .3rem
  padding 0 .3rem
  position relative
  &::before
    content ''
    position absolute
    bottom -.1rem
    left 0
    height 100%
    max-height .3rem
    width 100%
    background rgba(accent, .6)
    z-index -1
    transition .2s ease-out
  &:hover::before
    max-height 2rem
#container
  margin 0 auto
  max-width 860px
  padding 1rem
  @media screen and (max-width 860px)
    padding .5rem
    max-width 100%
#divider
  width 100%
  height .1rem
  margin 2rem 0
  background accent
  opacity .5
button
label
  cursor pointer
  background none
  font-weight bold
  color white
  padding .5rem 1rem
  font-size 1.1rem
  text-transform uppercase
  border .1rem solid accent_dark
  border-radius .5rem
  transition .3s ease-in
  &:hover
    color #1e272e
    background accent_dark
button.btn--red
  border .1rem solid error
  &:hover
    background error
    color white
label
  display inline-block
input[type="text"]
  padding .5rem 1rem
  font-size 1.1rem
  color #ffffff
  background none
  border none
  border-bottom 2px solid accent_dark
  margin-right 1rem
input[type="file"]
  display none
.error
  color error
.lock
  overflow hidden
img
  max-width 100%
.app
  &__header
    display flex
    align-items center
    justify-content space-between

// TRANSITIONS
.fade-enter-active, .fade-leave-active {
  transition: opacity .5s;
}
.fade-enter, .fade-leave-to /* .fade-leave-active до версии 2.1.8 */ {
  opacity: 0;
}